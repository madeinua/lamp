# MySQL Configuration for Docker LAMP Stack
# Adapted from XAMPP my.cnf

[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock
default-character-set = utf8mb4

[mysql]
no-auto-rehash
default-character-set = utf8mb4

[mysqld]
# Basic Settings
port = 3306
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid
datadir = /var/lib/mysql
tmpdir = /tmp

# Character Set & Collation
character-set-server = utf8mb4
collation-server = utf8mb4_general_ci
init-connect = 'SET NAMES utf8mb4'

# Networking
bind-address = 0.0.0.0
max_allowed_packet = 32M
net_buffer_length = 8K

# Buffer Settings (from XAMPP)
key_buffer_size = 16M
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 32M
myisam_sort_buffer_size = 32M

# Query Cache (Note: Deprecated in MySQL 8.0+)
# query_cache_size = 8M
# query_cache_type = 1

# Table Settings
table_definition_cache = 400
table_open_cache = 400

# Logging
general_log = 0
general_log_file = /var/lib/mysql/mysql.log
log_error = /var/log/mysql/error.log
# Slow query log
slow_query_log = 0
slow_query_log_file = /var/lib/mysql/mysql-slow.log
long_query_time = 2

# Replication & Binary Logging
server-id = 1
# Uncomment to enable binary logging
# log-bin = /var/lib/mysql/mysql-bin
# binlog_format = mixed
# expire_logs_days = 10
# max_binlog_size = 100M

# InnoDB Settings (from XAMPP, adapted)
innodb_data_home_dir = /var/lib/mysql
innodb_data_file_path = ibdata1:10M:autoextend
innodb_log_group_home_dir = /var/lib/mysql

# InnoDB Buffer Pool (50-80% of RAM for dedicated MySQL, less for shared)
# Adjusted from XAMPP's 64M - increase if you have more memory
innodb_buffer_pool_size = 256M

# InnoDB Log Files (25% of buffer pool size)
innodb_log_file_size = 64M
innodb_log_buffer_size = 32M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 180
innodb_file_per_table = 1

# Additional InnoDB Settings for better performance
innodb_flush_method = O_DIRECT
innodb_io_capacity = 200
innodb_read_io_threads = 4
innodb_write_io_threads = 4

# SQL Mode (from XAMPP)
sql_mode = NO_ZERO_IN_DATE,NO_ZERO_DATE,NO_ENGINE_SUBSTITUTION

# Functions & Procedures
log_bin_trust_function_creators = 1

# Relay Log (for replication)
relay-log-space-limit = 100M

# Security
# skip-name-resolve = 1

# Performance Schema
performance_schema = OFF

# Connection Settings
max_connections = 150
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600

# Temporary Tables
tmp_table_size = 32M
max_heap_table_size = 32M

[mysqldump]
quick
quote-names
max_allowed_packet = 16M

[isamchk]
key_buffer_size = 20M
sort_buffer_size = 20M
read_buffer = 2M
write_buffer = 2M

[myisamchk]
key_buffer_size = 20M
sort_buffer_size = 20M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout
